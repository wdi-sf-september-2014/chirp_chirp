<% if session[:user_id] %>
	<%= form_tag '/logout' do %>
		<div class="right">
			<button name="logout_button" class="btn btn-default btn-lg">Logout</button>
		</div>
	<% end %>


	<div class="container margin-top-20">
		<div class="logo border-radius-10">
			Chirp! The Next Big Thang
		</div>
	</div>

	<%= form_tag do %>
		<div class="container margin-top-10">
			<div class="one-chirp border-radius-10">
				<div class="row">
					<div class="col-sm-1">
						<img name="pic" src="/assets/birds/bird<%= @chirp.pic%>.png" class="img-responsive" />
					</div>
					<div class="col-sm-11">
						<div class="margin-top-10">
							<textarea class="form-control" name="chirp"><%=@chirp.chirp%></textarea>
						</div>
						<div class="margin-top-10 txt-right">
							<button name="delete_button" class="btn btn-danger">Delete Chirp</button>
							<button type="submit" class="btn btn-primary">Edit Chirp</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% end %>

<% end %>